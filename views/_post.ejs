<li id="post-<%=post._id%>">
                    
    <%if((locals.user) && (locals.user.id==post.user.id)){%>
        <small>
            <a class="delete post-button" href="/posts/destroy/<%=post.id%>">delete</a>
        </small>
    <%}%>
    <%= post.content %>
    <small>:
        <%=post.user.name%>
    </small>
    <div class="post-comment">
        <%if(locals.user){%>
            <form id="post-<%= post._id %>-comment-form" action="/comments/create" method="POST">
                <input type="text" name="content" placeholder="type here..." required> 
                <input type="hidden" name="post" value='<%=post._id%>' >
                <input type="submit" value="Add Comment">

            </form>
        <%}%>
        <div class="post-comment-list">
            <ul id="post-comment-<%=post._id%>">

                <% for(comment of post.comments){%>

                    <%- include('_comments.ejs') -%>
                <%}%>
            </ul>
        </div>
    </div>
</li>